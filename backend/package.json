{
    "name": "balanzo-backend",
    "version": "0.0.1",
    "description": "Node.js backend for Balanzo.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rolandcsosz/balanzo.git"
    },
    "author": "Roland Cs≈ësz",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rolandcsosz/balanzo/issues"
    },
    "homepage": "https://github.com/rolandcsosz/balanzo#readme",
    "main": "dist/index.js",
    "module": "CommonJS",
    "scripts": {
        "dev": "tsx index.ts",
        "build": "tsc && tsoa spec -c tsoa.prod.json",
        "generate:client": "dotenv -e .env -- prisma generate",
        "generate:routes": "tsoa routes -c tsoa.dev.json && node scripts/fixTsoaImports.js",
        "generate:swagger": "tsoa spec -c tsoa.dev.json",
        "generate:migration": "dotenv -e .env -- prisma migrate dev --name init",
        "start": "dotenv -e .env -- node dist/index.js",
        "clean": "rm -rf dist",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,sass}\"",
        "lint": "eslint .",
        "db:deploy": "dotenv -e .env.prod -- prisma migrate deploy"
    },
    "dependencies": {
        "@prisma/client": "^6.19.2",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "esbuild": "^0.27.2",
        "express": "^4.21.2",
        "joi": "^18.0.2",
        "jsonwebtoken": "^9.0.2",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.7.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@vitejs/plugin-react": "^5.1.2",
        "dotenv-cli": "^10.0.0",
        "eslint": "^9.38.0",
        "prettier": "^3.6.2",
        "prisma": "^6.19.2",
        "ts-node": "^10.9.2",
        "tsoa": "^6.6.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2",
        "vite": "^7.3.1"
    }
}
