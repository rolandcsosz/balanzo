{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/controllers/**/*.ts"],
    "spec": {
        "outputDirectory": ".",
        "specVersion": 3,
        "basePath": "/",
        "securityDefinitions": {
            "jwt": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "routes": {
        "routesDir": "src/routes",
        "authenticationModule": "src/routes/auth.ts"
    }
}
